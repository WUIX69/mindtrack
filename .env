# Application Settings
APP_NAME="MindTrack"
APP_ENV=development                           # EG: development, production
APP_DEBUG=true
APP_URL=http://localhost/mindtrack

# Database Configuration (XAMPP/Laragon MySQL)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=mindtrack_tan
DB_USERNAME=root
DB_PASSWORD=

# AJAX Settings
AJAX_TIMEOUT=30000
AJAX_CACHE=false
AJAX_RETRY_ATTEMPTS=3
AJAX_RETRY_DELAY=1000

# Session Settings
SESSION_NAME=MINDTRACK_SESSION

# Custom App Settings
TIMEZONE=Asia/Manila
DATE_FORMAT="Y-m-d"
TIME_FORMAT="H:i:s"
CURRENCY=PHP

# Development Tools
ERROR_LOG_PATH=logs/error.log
ACCESS_LOG_PATH=logs/access.log
